<!-- stages 1,2,3 -->
<div class="stages-card">
  <div class="row">

    <div class="col text-center">
      <i class="fas fa-wrench"></i>
      <p>issue</p>
    </div>

    <div class="col align-self-center text-light-grey">
      <i class="fas fa-ellipsis-h"></i>
    </div>

    <div class="col text-center text-light-grey">
      <i class="fas fa-location-arrow"></i>
      <p>location</p>
    </div>

    <div class="col align-self-center text-light-grey">
      <i class="fas fa-ellipsis-h"></i>
    </div>

    <div class="col text-center text-light-grey">
      <i class="far fa-images"></i>
      <p>photos</p>
    </div>

  </div>
</div>

<div class="container">

  <span id="text-lilac"> <%= link_to ('<i class="fas fa-long-arrow-alt-left mt-3 mr-1"></i>back').html_safe, repairs_path %> </span>

  <div class="d-flex justify-content-center pb-2">
    <h4 id="text-lilac">Confirm your issue:</h4>
  </div>


  <div class="card-repair-show mt-0">

    <% if @repair.image_url.present? %>
      <img src="<%= @repair.image_url %>" >
    <% end %>

    <div class="p-4">
      <div class="d-flex justify-content-center">
        <h4><%= @repair.repair_type %></h4>
      </div>


      <div class="text-muted">

        <div class="d-flex justify-content-center border-top pt-3">
          <p class="mr-3">Issue complexity:</p>
          <% @repair.level.times do %>
            <p> <i class="mr-2 fas fa-cog mr-1 text-muted"></i></p>
          <% end %>
          <% (3 - @repair.level).times do %>
            <p> <i class="mr-2 fas fa-cog mr-1 text-light-grey"></i></p>
          <% end %>
        </div>

        <div class="border-top pt-3 pb-3">
            <p class="text-center"> <i class="far fa-clock mr-2"></i><%= @repair.duration %> Minutes</p>
          <div class="d-flex">
            <span class="text-center">Approximately to complete this repair</span>
          </div>
        </div>

        <div class="d-flex justify-content-center border-top pt-3">
          <p>Gaurantee: 12 weeks</p>
          <!-- <p>Within this timeframe if the issue repeats it will be fixed free of charge.</p> -->
        </div>

      </div>

      <div class="border-top pt-3 d-flex justify-content-center">
        <h5> Total cost:  â‚¬ <%= @repair.price %>,00</h5>
      </div>

    </div>

  </div>



  <%= link_to repair_location_path(@repair) do %>
    <button class="btn-lilac mt-3 mb-3">Continue</button>
  <% end %>

</div>

