<div class="container py-5">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <div class="mt-3">
          <%= simple_form_for [@user, @repair, @booking], html: {class: 'form'} do |f| %>
            <div class="form-group">
              <%= f.label :title, 'Or you want to add a exact meeting point?' %>
              <%= f.input :location, placeholder: 'current location', label: false %>
              <div id="photos" class="mb-3">
                <%= f.input :photos, as: :file, input_html: { multiple: true, class: 'd-none hidden', id: 'photos-input'}, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload photos'  %>
                <%= image_tag "", width: 300, class: "hidden", id: "photos-preview" %>
              </div>
            </div>
              <div class="mt-3">
                <%= f.submit class: 'btn btn-booking' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
