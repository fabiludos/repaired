<% if !current_user.user_mechanic %>
  <div id='search'>
    <input class="btn btn-flat btn-lg" type="button" value="Search", id="search">
  </div>
  <div class="note">Search mechanics and wait for accepting your request</div>

  <div class="map-show">
    <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

<% else %>
  <div class="map-show">
    <div id="map"
      style="width: 100%; height: 600px;"
      data-marker="<%= @mechanic_marker.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      data-mechanic="mechanic_map">
    </div>
<% end %>

  <!-- info views for customer & mechanic -->
  <div class="row">
    <div class="col">
      <div class="badge-status d-flex align-items-center justify-content-center">
        <p> <%= @booking.status %> </p>
      </div>
      <div class="d-flex justify-content-around align-items-center mt-3 mr-2">
        <% if !current_user.user_mechanic %>
          <%= render 'show_customer' %>
        <% else %>
          <%= render 'show_mechanic' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="badge-time" id="time">
    <h5>15</h5>
    <p>min</p>
  </div>

  <%#= render 'show_review' %>
</div>


