<div class="container">

  <p>Current location</p>
  <i class="fas fa-long-arrow-alt-left"></i>
  
  <div id="map"
    style="width: 100%; height: 300px;"
    data-marker="<%= @customer_marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="cards justify-content-center">
    <div class="card-repair">
      <% if @booking.repair.image_url.present? %>
        <img src="<%= @booking.repair.image_url %>" >
        <div class="card-repair-infos mt-1 p-3 d-flex flex-column card-link">
          <h2 class="mt-1"><%= @booking.repair.repair_type %></h2>
          <p><i class="far fa-clock mr-2"></i> <%= @booking.repair.duration %> Minute</p>
          <div class="d-flex justify-content-between">
            <div class="d-flex">
              <% @booking.repair.level.times do %>
                <p> <i class="fas fa-cog mr-1 text-muted"></i></p>
              <% end %>
            </div>
            <p>â‚¬ <%= @booking.repair.price %>,00</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
 
  <div class="card-booking">
    <%= render "form", booking: @booking %>
  </div>

</div>
